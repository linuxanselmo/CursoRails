<p style="color: green"><%= notice %></p>

<h1>Coins <%= @coins.count %></h1>

<div id="coins">

  <%= link_to "New coin", new_coin_path %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Sigla</th>
        <th>Imagem</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td><%= image_tag coin.url_image, size: "25x25" %></td>
          <td><%= link_to t('links.show'), coin %></td>
          <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
          <td><%= link_to t('links.delete'), coin, method: :delete, data: {confirm: t('messages.confirm')} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
